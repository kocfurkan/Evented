@model List<Evented.Web.EventVM>

<div class="form-group">
    @foreach (var item in Model)
    {
        <div class="list-group w-auto">
            <div class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
                <img src="https://github.com/twbs.png" alt="twbs" width="62" height="62" class="rounded-circle flex-shrink-0">
                <div class="d-flex gap-2 w-100 justify-content-between">
                    <div class="col-md-4">
                        <h6 class="mb-0">@item.Title</h6>
                        <p class="mb-0 opacity-75">@item.Description</p>
                        <div class="d-flex gap-2 justify-content-between ">
                            <p class="opacity-50 mb-0">@User.Identity.Name</p>
                        </div>
                    </div>
                    <div class=" col-md-5">
                        <p>@item.Location</p>
                        <p class="opacity-50 text-nowrap">@item.BeginsAt -  @item.EndsAt </p>
                    </div>
                    <div class="col-md-4 align-content-end ">
                        <small class="opacity-50 text-nowrap">@item.joineeNumber/@item.joineeLimit</small>
                        <div > <a asp-controller="Event" asp-action="EditEvent" class="btn btn-primary btn-sm" asp-route-id="@item.Id">Edit</a>
                        <a asp-controller="Event" asp-action="DeleteEvent" class="btn btn-primary btn-sm" asp-route-id="@item.Id">Delete</a></div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

