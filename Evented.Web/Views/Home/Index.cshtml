@{
    ViewData["Title"] = "Home Page";
}
@model List<EventVM>

<div>
    <div class="form-group">
        @foreach (var item in Model)
        {
            <div class="list-group w-auto">
                <a href="/Event/Detail/@item.Id" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
                    <img src="https://github.com/twbs.png" alt="twbs" width="62" height="62" class="rounded-circle flex-shrink-0">
                    <div class="d-flex gap-2 w-100 justify-content-between">
                        <div>
                            <h6 class="mb-0">@item.Title</h6>
                            <p class="mb-0 opacity-75">@item.Description</p>
                            <div class="d-flex gap-2 justify-content-between ">
                                <p class="opacity-50 mb-0">@item.CreatorUser.UserName</p>
                            </div>
                        </div>
                        <div class="text-center">
                            <p>@item.Location</p>
                            <p class="opacity-50 text-nowrap">@item.BeginsAt -  @item.EndsAt </p>

                        </div>
                        <small class="opacity-50 text-nowrap"> @item.joineeNumber/@item.joineeLimit People Joined <br /> <br /> Company Hired : @item.HiredCompany.Name</small>

                    </div>
                </a>
            </div>
        }
    </div>

</div>
