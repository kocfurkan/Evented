@using Evented.Domain.Models
@using Microsoft.AspNetCore.Identity
@inject UserManager<User> UserManager
@model List<CommentVM>


@foreach (var item in Model)
{

    <div class="media" style="padding-left:60px;">
        <div class="media-left">
            <img src="~/Image/@item." class="img-circle" width="48" height="48" />
        </div>
        <div class="media-body">
            <div>
                <div class="col-md-11">
                    <h5><b>@item.User.UserName</b></h5>
                    <span id="text_@item.Id" contenteditable="false">@item.Text</span>
                    <div>
                        @if (item.User != null && item.User.Id == UserManager.GetUserId(User))
                        {
                            <span>
                                <a asp-controller="Comment" asp-action="Edit" class="btn btn-primary btn-sm" asp-route-id="@item.Id">Edit</a>
                                <a asp-controller="Comment" asp-action="Delete" class="btn btn-primary btn-sm" asp-route-id="@item.Id">Delete</a>
                            </span>
                        }
                        @if (item.Event.UsersJoined == UserManager.GetUserAsync(User))
                        {
                            <a asp-controller="Comment" asp-action="Create" class="btn btn-primary btn-sm" asp-route-id="@item.Id">Add Comment</a>
                        }
                        <small class="pull-right">
                            <span> @item.UpdatedAt</span>
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
